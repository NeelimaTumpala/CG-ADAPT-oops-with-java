//program 1
package co.vinod.entity;

public class Circle{
  
  private double radius;
  
  public Circle(double radius){
    this.radius=radius;
    
  }
  
  public void printArea(){
    double area = Math.PI*radius*radius;
    System.out.println("Area = " + area);
  }
}

// the above program have to be imported

package co.vinod;
import co.vinod.entity.Circle;

public class porgram01{
  public static void main(String[] args){
    
    Circle c1, c2, c3;
    
    c1 = new Circle(1.2);
    c2 = new Circle(2.3);
    c3= = new Circle(3.4);
    
    c1.printArea();
    c2.printArea();
    c3.printArea();
    
    System.out.println("value of PI is "+ Math.PI);
  }
}

