package co.vinod;

import co.vinod.entity.Department;
import co.vinod.entity.Employee;

public class Progarm01{
  public static void main(String[] args){
    
    Department d1 = new Department(10,"ADMINISTRATON","Bangalore");
    
    Employee e1 = new Employee();
    e1.setId(7788);
    e1.setName("scott");
    e1.setSalary(2300.0);
    e1.setDepartment(d1);
    
    //e1.print();
    
    System.out.println(e1);
    
    System.out.println(e1.getName() + "works for "
    +e1.getDepartmment().getName()+"department located at"
    +e1.getLocation());
  }
}

