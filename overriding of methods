//circle.java

package co.vinod.entity;
public class Circle extends Shape{
  
  private double radius;
  
  public Circle(double radius){
    this.radius = radius;
  }
  @Override
  public void info(){
    System.out.println("class circle by vinod.");
  }
  
  @Override
  public void printArea(){
    System.out.println("area circle by vinod."+Math.PI*raius*radius);
  }
}

